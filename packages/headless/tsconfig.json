{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@flowsterix/react": ["../react/dist"],
      "@flowsterix/react/*": ["../react/dist/*"],
      "@flowsterix/react/headless": ["../react/dist/headless"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "../react" }]
}
