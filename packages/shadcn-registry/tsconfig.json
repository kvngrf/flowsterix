{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./registry",
    "declaration": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["./lib/*"],
      "@/components/*": ["./components/*"],
      "@/registry/*": ["./registry/*"]
    }
  },
  "include": ["registry/**/*.ts", "registry/**/*.tsx"],
  "exclude": ["node_modules", "dist", "public"]
}
